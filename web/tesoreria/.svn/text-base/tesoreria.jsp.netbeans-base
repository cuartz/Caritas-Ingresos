                Ext.apply(this, {
                    items:[
                    {
                        xtype: 'tabpanel',
                        height: 890,                        
                        activeTab: 0,
                        border: false,
                        items:[
                            /**************************** PESTA√ëA COBROS EN EFECTIVO *************************************/
