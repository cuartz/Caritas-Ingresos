                                xtype: 'panel',                          
                                border:false,
                                tbar: tbUno,
                                title: 'Cobros en Efectivo',
                                items: [
                                    {
                                        xtype: 'form',  
                                        id: 'frmCobrosEfectivo',
                                        border: false,
                                        items:[
                                            {
                                                xtype: 'fieldset',
                                                height: 165,
                                                title: 'Filtros',
                                                items:[
                                                    Ext.create('Ext.form.ComboBox',{
                                                        fieldLabel: 'Zona',
                                                        id:'ID_ZONA',
                                                        store: stateszonasPC,                                                                                                                                                                                                                          
                                                        labelWidth: 130,
